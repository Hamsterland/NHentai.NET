<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>NHentai API Wrapper</Title>
        <Description>NHentai API Wrapper for .NET</Description>
        <RepositoryUrl>https://github.com/Hamsterland/NHentai.NET/tree/master</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageLicenseUrl>https://github.com/Hamsterland/NHentai.NET/blob/master/LICENSE</PackageLicenseUrl>
        <PackageVersion>1.1.0</PackageVersion>
        <PackageTags>nhentai, hentai, anime</PackageTags>
        <PackageReleaseNotes>Pluralise Title property to Titles. Add support for retrieving cover image.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.3" />
    </ItemGroup>

</Project>
